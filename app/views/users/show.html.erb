<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
                <%if current_user.id == @user.id%>
        <%= link_to "情報を編集", edit_user_path(current_user.id), class: "restaurant__top" %>
        <% end %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">年齢</th>
            <td class="table__col2"><%= @user.age.name %></td>
          </tr>
          <tr>
            <th class="table__col1">好きなジャンル</th>
            <td class="table__col2"><%= @user.taste %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">投稿したお店の数</th>
            <td class="table__col2"><%= @restaurants.length%></td>
          </tr>
        </tbody>
      </table>
      <div>
      <div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="3" data-url="https://tabeiku-app.herokuapp.com/" data-color="default" data-size="large" data-count="false" style="display: none;"></div>
      <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの投稿したお店"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'restaurants/restaurant', collection: @restaurants %>
      </div>
      </div>
    </div>
  </div>
</div>