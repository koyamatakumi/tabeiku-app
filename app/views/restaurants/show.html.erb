<main class="main">
  <div class="inner">
    <div class="restaurant__wrapper">
      <p class="restaurant__hedding">RESTAURANT NAME</p>
        <%= @restaurant.restaurant %>
      </p>
      <p class="restaurant__summary">詳細リンク  </p>
      <%= link_to 'こちらをクリック', @restaurant.gaibu_net ,target: :_blank%>
      <p class="restaurant__summary">投稿者</p>
      <%= link_to "by #{@restaurant.user.nickname}","#", class: :restaurant__user %>

      <div class="prototype__body">

      <div class="prototype__comments">
        <% if user_signed_in? %> 
           <%= form_with model: [@restaurant, @comment], local: true do |f|%> 
            <div class="field">
               <%= f.label :comment, "コメント" %><br /> 
               <%= f.text_field :comment %> 
            </div>
            <div class="actions">
               <%= f.submit "送信する", class: :form__btn  %> 
            </div>
           <% end %>  
        <% end %>
        <ul class="comments_lists">
          <%# <% @comments.each do |comment| %> 
            <li class="comments_list">
              <%# <%= "#{comment.text}"%> 
              <%# <%= link_to "（#{comment.user.name}）", user_path(comment.user) ,class: :comment_user %> 
            </li>
          <%# <% end %> 
        </ul>
      </div>
    </div>
  </div>
</main>
